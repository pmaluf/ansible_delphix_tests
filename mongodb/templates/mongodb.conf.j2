# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# network interfaces
net:
  port: "27{{last3digitport}}"
  bindIp: 0.0.0.0     

# how the process runs
processManagement:
  fork: true  # fork and run in background
  pidFilePath: "/u01/mongodb/data{{last3digitport}}/mongod.pid  # location of pidfile"
  timeZoneInfo: /usr/share/zoneinfo

# Where and how to store data.
storage:
  dbPath: "/u01/mongodb/data{{last3digitport}}"
  engine: wiredTiger
  journal:
    enabled: true

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: "/u01/mongodb/log/mongodb{{last3digitport}}.log"

